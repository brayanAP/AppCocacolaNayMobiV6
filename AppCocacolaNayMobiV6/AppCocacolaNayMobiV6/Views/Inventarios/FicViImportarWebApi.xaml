<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCocacolaNayMobiV6.Views.Inventarios.FicViImportarWebApi">

    <ContentPage.Content>
        <ScrollView >

            <StackLayout Padding="10" Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Entry Text="{Binding FicLabelIdInv}"/>
                    <Button Text="IMP. CATALOGO INV."  Command="{Binding FicMecImportIdInv}"></Button>
                </StackLayout>
                <StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="LightGray">
                    <Label Text="{Binding FicTextAreaImpInv}" FontAttributes="Bold"/>
                </StackLayout>
                <StackLayout Padding="10" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Center">
                    <Button Text="IMP. CATALOGO INV."  Command="{Binding FicMecImportInv}"></Button>
                    <Button Text="IMP. CATALOGOS GEN." Command="{Binding FicMecImportCat}"></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>